<h3>New User</h3>
<form action="<%= user_url(params[:activation_token]) %>" method="POST">
  <input  type="hidden" name="_method" value="put">

  <label>Email
  <input type="text" name="user[email]"></input>
  </label>
  <br>
  <label>Password
  <input type="password" name="user[password]"></input>
  </label>
  <br>

  <input type="submit" value="Create"></input>
</form>