<!DOCTYPE html>
<html>
<head>
  <title>GoodReadsClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
	<%= stylesheet_link_tag 	 params[:controller] %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <% if current_user %>
		<div id="logout-botton">
		<%= button_to "Log Out", session_url, method: :delete %>
		</div>
		
			<a id="username" href="<%= user_url(current_user) %>"><%= current_user.name %></a>
				<% if current_user.id == 1 %>
					<a id="admin-panel" href="<%= home_admin_url %>">ADMIN</a>
				<% end %>
    <% end %>
		<a id="logo" href="<%= root_url %>">GoodReadsClone</a>
  </nav>

	<% if flash.now[:errors] %>
	  <% flash.now[:errors].each do |error| %>
	   <%= error %><br />
	  <% end %>
	<% end %>

	<div id="main">
		<%= yield %>
	</div>

</body>
</html>
