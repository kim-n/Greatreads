<!DOCTYPE html>
<html>
<head>
  <title>GoodReadsClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
	<%= stylesheet_link_tag 	 params[:controller] %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
			<a id="logo" href="<%= root_url %>">GoodReadsClone</a>
			<ul>
				<li>
					<a href="<%= users_url %>">Users</a>
				</li>
				<li>
					<a href="<%= books_url %>">Books</a>
				</li>
				<li>
					<a href="<%= clubs_url %>">Clubs</a>
				</li>
	    <% if current_user %>
				<% if current_user.id == 1 %>
				<li>
					<a id="admin-panel" href="<%= home_admin_url %>">ADMIN</a>
				</li>
				<% end %>
				<li id="username">
					<a href="<%= user_url(current_user) %>"><%= current_user.name %></a>
				</li>
				<li id="log-botton">
					<%= button_to "Log Out", session_url, method: :delete %>
				</li>
			<% else %>
				<li id="log-botton">
					<a href="<%= new_session_url %>">Log In</a>
				</li>
	    <% end %>
		</ul>
  </nav>

	<% if flash.now[:errors] %>
	  <% flash.now[:errors].each do |error| %>
	   <%= error %><br />
	  <% end %>
	<% end %>

	<div id="main">
		<%= yield %>
	</div>

</body>
</html>
